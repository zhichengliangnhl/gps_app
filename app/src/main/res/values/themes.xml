<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main app theme -->
    <style name="Theme.NavigationApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorButtonNormal">@null</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="android:statusBarColor">#000000</item>
    </style>

    <style name="Theme.NavigationApp.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorButtonNormal">@null</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <!-- Prevent native splash icon from showing -->
        <item name="windowSplashScreenBackground">#E6B974</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Still compatible with AppCompatActivity -->
        <item name="android:windowBackground">#E6B974</item>

        <item name="postSplashScreenTheme">@style/Theme.NavigationApp</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">#000000</item>
    </style>
    <style name="Theme.NavigationApp.Retro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/times</item>
        <item name="colorPrimary">#241A09</item>
    </style>

</resources>
