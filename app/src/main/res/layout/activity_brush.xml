<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/topBar"
        layout="@layout/include_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/lightBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:useDefaultMargins="true">

                <LinearLayout
                    android:id="@+id/theme1"
                    android:layout_width="10dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Classic"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/theme1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme2"
                    android:layout_width="10dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Macha"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/theme2"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme3"
                    android:layout_width="10dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Savanna"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/theme3"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme4"
                    android:layout_width="10dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aqua"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/theme4"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme5"
                    android:layout_width="10dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lavender"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/theme5"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme6"
                    android:layout_width="10dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunset"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/theme6"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme7"
                    android:layout_width="10dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Navy"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/theme7"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme8"
                    android:layout_width="10dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fake Holland"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/theme8"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme9"
                    android:layout_width="10dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Macchiato"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/theme9"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme10"
                    android:layout_width="10dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cookie &amp; Cream"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/theme10"/>
                </LinearLayout>

            </GridLayout>

            <GridLayout
                android:id="@+id/achievementContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/include_bottom_nav" />

</LinearLayout>