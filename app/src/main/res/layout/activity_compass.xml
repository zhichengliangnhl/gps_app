<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6B974"
    tools:context=".activities.CompassActivity">

    <include
        android:id="@+id/topBar"
        layout="@layout/include_top_bar" />

    <!-- Center Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:id="@+id/arrowImage"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/arrow_1"
            android:contentDescription="Compass Arrow"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/waypointStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No waypoint selected"
            android:textStyle="italic|bold"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: -"
            android:textStyle="italic"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <android.widget.Button
            android:id="@+id/waypointsButton"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="WAYPOINTS"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button_brown"
            android:paddingHorizontal="32dp"
            android:paddingVertical="14dp" />

        <Button
            android:id="@+id/btnChangeTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Theme"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btnEarnCoins"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginBottom="18dp"
            android:text="Earn 1"
            android:textSize="16sp" />


    </LinearLayout>

    <!-- Bottom Nav Bar -->
    <include layout="@layout/include_bottom_nav" />
</LinearLayout>
