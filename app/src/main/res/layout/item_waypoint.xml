<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="#1E1E1E">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/waypointImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/image_background"
            android:contentDescription="Waypoint Image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/waypointName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="48dp"
            android:layout_toEndOf="@id/waypointImage"
            android:text="Waypoint Name"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/waypointDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/waypointName"
            android:layout_alignStart="@id/waypointName"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="48dp"
            android:text="Waypoint description goes here"
            android:textColor="#CCCCCC"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/waypointDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/waypointDescription"
            android:layout_alignStart="@id/waypointName"
            android:layout_marginTop="4dp"
            android:text="2025-04-24"
            android:textColor="#888888"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit Waypoint"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnEdit"
            android:layout_alignEnd="@id/btnEdit"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete Waypoint"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#FF5252" />

        <LinearLayout
            android:id="@+id/navigateBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="start"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnNavigate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="#4CAF50"
                android:elevation="2dp"
                android:paddingHorizontal="16dp"
                android:text="Navigate"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
