<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/topBar"
        layout="@layout/include_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EFC37B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/achievementTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="32sp"
                android:textColor="#fff"
                android:layout_gravity="start"
                android:paddingBottom="24dp"
                android:shadowColor="#000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"/>

            <GridLayout
                android:id="@+id/achievementGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false"
                android:layout_gravity="center"
                android:layout_marginTop="12dp">

                <!-- Card 1 -->
                <LinearLayout
                    android:id="@+id/card1"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Run III"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/trophy"
                        android:contentDescription="Trophy"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star3"/>
                </LinearLayout>
                <!-- Repeat the above LinearLayout 6 more times for a total of 7 cards -->
                <LinearLayout
                    android:id="@+id/card2"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Run II"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/trophy"
                        android:contentDescription="Trophy"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:src="@drawable/star2"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/card3"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Run I"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/trophy"
                        android:contentDescription="Trophy"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:src="@drawable/star1"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/card4"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theme III"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/trophy"
                        android:contentDescription="Trophy"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star3"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/card5"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theme II"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/trophy"
                        android:contentDescription="Trophy"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:src="@drawable/star2"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/card6"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theme I"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/trophy"
                        android:contentDescription="Trophy"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:src="@drawable/star1"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/card7"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_card_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collection"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#222"
                        android:layout_marginBottom="8dp"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/trophy"
                        android:contentDescription="Trophy"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star3"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/include_bottom_nav" />

</LinearLayout>