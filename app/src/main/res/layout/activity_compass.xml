<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f8f5f0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="24dp">

    <ImageView
        android:id="@+id/compassNeedleImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="Compass Needle"
        android:src="@drawable/ic_compass_needle" />

    <!-- ✅ Add missing TextView for waypoint name -->
    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waypoint Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"/>

    <!-- ✅ Add missing TextView for distance -->
    <TextView
        android:id="@+id/distanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance: --"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnWaypointList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waypoints"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnCreateWaypoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add New Waypoint" />

</LinearLayout>
