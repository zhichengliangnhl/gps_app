<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="#1E1E1E">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/waypointImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background"
            android:background="@drawable/image_background"
            android:contentDescription="Waypoint Image" />

        <TextView
            android:id="@+id/waypointName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/waypointImage"
            android:layout_marginStart="12dp"
            android:text="Waypoint Name"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/waypointDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/waypointName"
            android:layout_alignStart="@id/waypointName"
            android:layout_marginTop="4dp"
            android:text="Waypoint description goes here"
            android:textColor="#CCCCCC"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit Waypoint"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@id/btnEdit"
            android:layout_alignEnd="@id/btnEdit"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete Waypoint"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#FF5252" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
